<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFlix.MainPage">
    <ContentPage.Content>

        <Grid ColumnDefinitions="*, *"
              RowSpacing="10" Margin="10"
              VerticalOptions="FillAndExpand"
              RowDefinitions="*,*,*,*,*">
            
            <Button Grid.Row="0" Grid.Column="0" Text="Ação" Clicked="Button_Clicked"/>
            <Button Grid.Row="0" Grid.Column="1" Text="Aventura" Clicked="Button_Clicked_1"/>
            <Button Grid.Row="1" Grid.Column="0" Text="Comedia" Clicked="Button_Clicked_2"/>
            <Button Grid.Row="1" Grid.Column="1" Text="Terror" Clicked="Button_Clicked_3"/>

        </Grid>

    </ContentPage.Content>

</ContentPage>
