<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFlix.MainPage">
    <ContentPage.Content>

        <Grid RowDefinitions="*, *, *, *, *, *"
              ColumnDefinitions="*, *">

            <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource Botao}" x:Name="aventura" Text="AVENTURA" Clicked="aventura_Clicked" />
            <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource Botao}" x:Name="comedia"  Text="COMÉDIA" Clicked="comedia_Clicked" />

            <Button Grid.Row="2" Grid.Column="0" Style="{StaticResource Botao}" x:Name="drama" Text="DRAMA" Clicked="drama_Clicked" />
            <Button Grid.Row="2" Grid.Column="1" Style="{StaticResource Botao}" x:Name="terror" Text="TERROR" Clicked="terror_Clicked" />

            <Button Grid.Row="3" Grid.Column="0" Style="{StaticResource Botao}" x:Name="ficcaoc" Text="FICCÃO CIENTÍFICA" Clicked="ficcaoc_Clicked" />
            <Button Grid.Row="3" Grid.Column="1" Style="{StaticResource Botao}" x:Name="suspense" Text="SUSPENSE" Clicked="suspense_Clicked" />

            <Button Grid.Row="4" Grid.Column="0" Style="{StaticResource Botao}" x:Name="infantil" Text="INFANTIL" Clicked="infantil_Clicked" />
            <Button Grid.Row="4" Grid.Column="1" Style="{StaticResource Botao}" x:Name="animacao" Text="ANIMAÇÃO" Clicked="animacao_Clicked" />

            <Button Grid.Row="5" Grid.Column="0" Style="{StaticResource Botao}" x:Name="documentario" Text="DOCUMENTÁRIO" Clicked="documentario_Clicked" />
            <Button Grid.Row="5" Grid.Column="1" Style="{StaticResource Botao}" x:Name="guerra" Text="Guerra" Clicked="guerra_Clicked" />

            <Button Grid.Row="6" Grid.Column="0" Style="{StaticResource Botao}" x:Name="nacional" Text="NACIONAL" Clicked="nacional_Clicked" />
            <Button Grid.Row="6" Grid.Column="1" Style="{StaticResource Botao}" x:Name="romance" Text="ROMANCE" Clicked="romance_Clicked" />
        </Grid>

    </ContentPage.Content>

</ContentPage>
