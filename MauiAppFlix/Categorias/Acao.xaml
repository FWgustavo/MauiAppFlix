<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFlix.Categorias.Acao"
             Title="Acao">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"
                  ColumnDefinitions="*,*"
                  Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                             Source="furiosos9.jpg" x:Name="btnFuriosos"
                             Clicked="btnFuriosos_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0"
                             Source="planetamacaco.jpg" x:Name="btnMacaco"
                             Clicked="btnMacaco_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1"
                             Source="espiaoemeio.jpg" x:Name="btnEspiao"
                             Clicked="btnEspiao_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>